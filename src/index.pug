extends ./components/layout
include ./components/promo
include ./components/reg_sliders
include ./components/reviews
include ./components/functions
include ./components/datings
include ./components/mixins

block head
  - let pageTitle = 'мята'
  - let pageDescription = 'мята'

block content
  main.page.relative
    section.section--holder.__white.__end
      .section
        +promo()

        .section--end.__left.hide__after-xl

    section.section--holder.__gray.__end.__start.ovh
      .section
        +reg_sliders()

    section.section--holder.__white.__end.__start.ovh
      .section
        +reviews()

    section.section--holder.__gray.__end.__start.ovh
      .section
        +functions()

    section.section--holder.__white.__end.__start.ovh
      .section
        +datings()


block scripts
  script(src="./assets/js/main.js")
