include ./mixins

mixin footer()
  footer.section--holder.__white.__start: .section: .footer
    a.logo.hide__before-xl(href='/')
      img(alt='img' src='./assets/svg/logo_s.svg' width=203 heigth=71)

    .footer--download
      p.hide__after-xl Скачивайте наше приложение
      .footer--app
        +app_btns()

    nav.nav
      ul.navigation
        each item in navigation
          li: a(href='#')= item

