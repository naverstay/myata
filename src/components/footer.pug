include ./mixins

mixin footer()
  footer.section--holder.__gray.__start: .section: .footer
    a.logo.hide__before-xl.js-goto(href='#section-0')
      img(alt='img' loading='lazy' src='./assets/svg/logo_s.svg' width=203 height=71)

    .footer--download
      p.hide__after-xl Скачивайте наше приложение
      .footer--app.flex.__center.__center-align
        +app_btns()

    +nav()

    .footer--copy
      span.clr-mint Если Возникли вопросы:&nbsp;
      a.clr-mint(href='mailto:support@mintapp.org') support@mintapp.org
      span &nbsp;&copy; 2024 Dating lab
