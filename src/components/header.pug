mixin header()
  header.header-holder: .section: .header
    a.logo(href='/')
      img(src='./assets/svg/logo_s.svg')

    nav.nav
      ul.navigation
        each item in navigation
          li: a(href='#')= item

    .download
      a.btn.btn--green.__s-48.btn--round(href='#')
        span Скачать
        span приложение
