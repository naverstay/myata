mixin promo(props = {})
  .promo
    .promo--left
      h1.promo--title Мята - знакомства в&nbsp;твоем городе
      .promo--text Попробуйте бесплатное приложение для&nbsp;знакомств с&nbsp;ежедневной аудиторией более&nbsp;650&nbsp;000&nbsp;человек!
      .promo--app
        +app_btns()

    .promo--right
      .promo--screen
        +img_src('./assets/image/', 'phone-3', 'png')(width=347 height=640)
      .promo--screen
        +img_src('./assets/image/', 'phone-2', 'png')(width=347 height=640)

    .promo--stat
      .promo--stat_item
        b 5М+
        p скачиваний

      .promo--stat_item
        b 650000+
        p человек ежедневно

      .promo--stat_item
        b 4.5
        p рейтинг
