{
  "name": "parcel-pug-scss-starter",
  "description": "Simple boilerplate to start building html templates with parcel, pug, scss, and modern javascript.",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "Oury Diallo",
    "url": "https://www.oury.dev",
    "email": "ourystd224@gmail.com"
  },
  "keywords": [
    "parcel",
    "pug",
    "scss",
    "bundler",
    "parcel-pug"
  ],
  "homepage": "https://github.com/ourystd/parcel-pug-scss-starter",
  "bugs": {
    "url": "https://github.com/ourystd/parcel-pug-scss-starter/issues"
  },
  "source": "src/index.pug",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "dev": "parcel -p 3006",
    "build": "parcel build",
    "predeploy": "shx rm -rf deploy && parcel build --dist-dir ./deploy",
    "deploy": "surge --project ./deploy --domain lean-land.surge.sh",
    "prebuild": "shx rm -rf dist"
  },
  "staticFiles": {
    "staticFiles": {
      "staticPath": [
        {
          "staticPath": "src/favicon",
          "watcherGlob": "**"
        }
      ]
    }
  },
  "parcel-namer-struct": [
    {
      "type": [
        "scss",
        "css"
      ],
      "dest": "/styles/"
    },
    {
      "type": [
        "js"
      ],
      "dest": "/scripts/"
    },
    {
      "type": [
        "svg",
        "jpeg",
        "jpg",
        "png"
      ],
      "dest": "/images/"
    }
  ],
  "devDependencies": {
    "@parcel/packager-raw-url": "2.9.3",
    "@parcel/transformer-pug": "2.9.3",
    "@parcel/transformer-sass": "2.9.3",
    "@parcel/transformer-webmanifest": "2.9.3",
    "parcel": "^2.9.3",
    "parcel-namer-struct": "^1.0.0",
    "parcel-plugin-static-files-copy": "^1.2.4",
    "posthtml-beautify": "^0.7.0",
    "shx": "^0.3.4"
  }
}
